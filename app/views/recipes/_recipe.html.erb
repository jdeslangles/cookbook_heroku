  <div class="span4 offset1">
    <% cycle("odd","even") %>
    <div class="coolrecipe">
    <table class="table">
        <%=image_tag recipe.image, size: '200x150' if recipe.image %>
      <tr>
        <th>Title</th>
        <td><%= recipe.title %></td>
      <tr>
        <th>Author</th>
        <td><%= recipe.author %></td>
      <tr>
        <th>Instructions</th>
        <td><%= recipe.instructions %></td>
      <tr>
        <th>Category</th>
        <td><%= recipe.categories.category_name if recipe.categories %></td>
      <tr>
        <th>Ingredients</th>
        <td><% recipe.ingredients.each do |i| %>
          <%= i.name + ", " %>
          <%end%>
        </td>
        <tr>
      </table>
        <div class="links"><%= link_to 'See details,', recipe_path(recipe)%>
        <%= link_to 'Edit,', edit_recipe_path(recipe)%>
        <%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' }%>
      </div>
    </div>
  </div>
  <% if current_cycle == 'even' %>
    </div>
    <div class="row">
    <% end %>