<div class="span5 offset1">
  <%= render 'shared/error_message_recipe' %>
  <div class="coolrecipe">
  <%= form_for(@recipe) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %><br />
    </div>
     <div class="field">
      <%= f.label :author %>
      <%= f.text_field :author %><br />
    </div>
    <div class="field">
      <%= f.label :image %>
      <%= f.text_field :image %><br />
    </div>
     <div class="field">
      <%= f.label :instructions %>
      <%= f.text_field :instructions %><br />
    </div>
    <div class="field">
    <%= f.label :categories %>
    <%= f.select "categories_id", options_from_collection_for_select(@categories, "id", "category_name") %><br />
    </div>
    <div class="field">
      <%= f.label :ingredients %>
      <% Ingredient.all.each do |ingredient| %>
      <div>
        <%= check_box_tag "recipe[ingredient_ids][]", ingredient.id, @recipe.ingredients.include?(ingredient) %>
        <%= ingredient.name %>
      </div>
      <% end %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
</div>