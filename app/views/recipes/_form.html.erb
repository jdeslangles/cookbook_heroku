<div class="span5 offset1">
  <%= render 'shared/error_message_recipe' %>
  <div class="coolrecipe">
  <%= nested_form_for(@recipe) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %><br />
    </div>
     <div class="field">
      <%= f.label :author %>
      <%= f.text_field :author %><br />
    </div>
    <div class="field">
      <%= f.label :recipe_image%>
      <%= f.file_field :recipe_image%><br/><br/>
    </div>
     <div class="field">
      <%= f.label :instructions %>
      <%= f.text_field :instructions %><br />
    </div>
    <div class="field">
    <%= f.label :categories %>
    <%= f.select "categories_id", options_from_collection_for_select(@categories, "id", "category_name") %><br />
    </div>
    <div class="field">
        <%= render 'fields', f: f %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
</div>