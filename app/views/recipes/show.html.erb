<h3>Recipes details</h3>
<%= render 'shared/alert_message' %>
<div class="row">
  <div class="span5 offset1">
    <br>
    <div class="coolrecipe">
      <%=image_tag @recipe.recipe_image.detail.url %>
      <table class="table">
        <tr>
          <th>Title</th>
          <td><%= @recipe.title %></td>
        <tr>
          <th>Instructions</th>
          <td><%= @recipe.instructions %></td>
        <tr>
          <th>Author</th>
          <td><%= @recipe.author %></td>
        <tr>
          <th>Category</th>
          <td><%= @recipe.categories.category_name if @recipe.categories %></td>
        <tr>
          <th>Ingredients</th>
          <td>
            <ul>
              <% @recipe.ingredients_recipes.each do |ingredients_recipe| %>
                <li><%= ingredients_recipe.quantity %> of <%= ingredients_recipe.ingredient.name %></li>
              <% end %>
            </ul>
          </td>
      </table>
      <br>
      <% if can? :edit, Recipe %>
        <%= link_to 'Edit', edit_recipe_path(@recipe.id)%>
      <% end %>
      <% if can? :edit, Recipe %>
        <%= link_to '- Delete', recipe_path(@recipe.id), method: :delete, data: { confirm: 'Are you sure?' }%>
      <% end %>
    </div>
  </div>
</div>